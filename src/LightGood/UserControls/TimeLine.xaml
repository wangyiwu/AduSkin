<UserControl x:Class="LightGood.UserControls.TimeLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metro="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Metro:AduTimeline IsCustomEverySlot="True" VerticalAlignment="Center" x:Name="AduTimeLine" HorizontalAlignment="Center">
            <Metro:AduTimeline.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock x:Name="timePart" Text="{Binding Item2}" Foreground="Black" />
                        <TextBlock Text="{Binding Item3}" Margin="0,10,0,30" />
                    </StackPanel>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=IsFirstItem, RelativeSource={RelativeSource AncestorType={x:Type Metro:AduTimelineItem}}}" Value="True">
                            <Setter TargetName="timePart" Property="Foreground" Value="Red" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Metro:AduTimeline.ItemTemplate>
            <Metro:AduTimeline.SlotTemplate>
                <DataTemplate>
                    <Border x:Name="border" Width="15" Height="15" CornerRadius="100" 
                                BorderBrush="Blue" BorderThickness="1" 
                                SnapsToDevicePixels="True" UseLayoutRounding="True" />
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Item1}" Value="1">
                            <Setter TargetName="border" Property="BorderBrush" Value="#09CD6B" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Item1}" Value="2">
                            <Setter TargetName="border" Property="BorderBrush" Value="#FD4416" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Item1}" Value="3">
                            <Setter TargetName="border" Property="BorderBrush" Value="#46A2FF" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Item1}" Value="4">
                            <Setter TargetName="border" Property="BorderBrush" Value="#06CD6A" />
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Metro:AduTimeline.SlotTemplate>
        </Metro:AduTimeline>
    </Grid>
</UserControl>
