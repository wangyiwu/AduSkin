<UserControl x:Class="LightGood.UserControls.NoticeDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Metro="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
             xmlns:viewmodel="clr-namespace:LightGood.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:NoticeDemoViewModel/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Metro:AduFlatButton Content="Info" Type="info" Name="InfoMsg" Width="200" Height="35" Margin="5" Command="{Binding OpenMsg}" CommandParameter="Info"></Metro:AduFlatButton>
            <Metro:AduFlatButton Content="Error" Type="error" Name="ErroMsg" Width="200" Height="35" Margin="5" Command="{Binding OpenMsg}" CommandParameter="Error"></Metro:AduFlatButton>
            <Metro:AduFlatButton Content="Success" Type="success" Name="SuccessMsg" Width="200" Height="35" Margin="5"  Command="{Binding OpenMsg}" CommandParameter="Success"></Metro:AduFlatButton>
            <Metro:AduFlatButton Content="Warning" Type="warning" Name="WarmMsg" Width="200" Height="35" Margin="5"  Command="{Binding OpenMsg}" CommandParameter="Warm"></Metro:AduFlatButton>
        </StackPanel>
    </Grid>
</UserControl>
